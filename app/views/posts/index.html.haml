- p = Post.last
.row
  - 3.times do 
    .col-md-4.image-container.box-container
      = link_to post_path(p.id) do
        =image_tag p.photo.url
      %br
      = link_to post_path(p.id) do
        - if post_is_editable?(params[:action], p.user_id)
          %p.small_title= link_to p.title , edit_post_path(p.id)
        - else
          %p.small_title= p.title
      %p.small_description
        = p.description.truncate(100)
      = link_to "<p class='info'>Author: #{p.user.username}</p>".html_safe, posts_user_path(p.user)
