- @posts.each do |p|
  .row
    .col-md-1
    .col-md-10.image-container.box-container
      =image_tag 'loading.gif', 'data-original' => p.photo.url, class: 'lazy', data: {'no-turbolink' =>  true}
      %br
      %br
      - if post_is_editable?(params[:action])
        %p.title= link_to p.title , edit_post_path(p.id)
      - else
        %p.title= p.title
      %p.description
        = p.description
      %p.info Visited on: #{p.visited_on}
      %p.info Place: #{p.place + ', ' + p.country}
      = link_to "<p class='info'>Author: #{p.user.username}</p>".html_safe, posts_user_path(p.user)
      = image_tag 'nouserimage.png', class: 'profile-pic img-circle'
    .col-md-1
  %br

:javascript

  $("img.lazy").lazyload({
    effecf: 'fadeIn'
  });
