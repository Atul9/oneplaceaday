.row
  .col-md-1
  .col-md-10.image-container.box-container
    =image_tag @post.photo.url
    %br
    %br
    - if post_is_editable?(params[:action], @post.user_id)
      %p.title= link_to @post.title , edit_post_path(@post.id)
    - else
      %p.title= @post.title
    %p.description
      = @post.description
    %p.info Visited on: #{@post.visited_on}
    %p.info Place: #{@post.place + ', ' + @post.country}
    = link_to "<p class='info'>Author: #{@post.user.username}</p>".html_safe, posts_user_path(@post.user)
    - photo_url = @post.user.profile_photo.url
    - photo_url = 'nouserimage.png' if photo_url.nil?
    = image_tag photo_url, class: 'profile-pic img-circle'
  .col-md-1
%br
